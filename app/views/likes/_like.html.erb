<% if user_signed_in? %>
  <% if prototype.like_user(current_user.id) %>
    <%= button_to prototype_like_path(prototype_id: prototype.id), method: :delete, id: "like-button", remote: true do %>
      <%= image_tag "icon_red_heart.png", :size => '14x14' %>
      <span class="num">
       LIKE <%= prototype.likes_count %>
      </span>
    <% end %>
  <% else %>
    <%= button_to prototype_likes_path(prototype), id: "like-button", remote: true do %>
      <%= image_tag "icon_heart.png", :size => '14x14' %>
      <span>
       LIKE <%= prototype.likes_count %>
      </span>
    <% end %>
  <% end %>
<% else %>
  <%= image_tag "icon_heart.png", :size => '14x14' %>
    <span>
     LIKE <%= prototype.likes_count %>
    </span>
<% end %>

